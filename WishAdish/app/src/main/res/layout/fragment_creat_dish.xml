<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titel" />

    <EditText
        android:id="@+id/dish_name_plainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish_name_plainText"
        android:text="Zutatenliste :                   " />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish_name_plainText"
        android:layout_toRightOf="@id/textView14"
        android:text="Menge :          " />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dish_name_plainText"
        android:layout_toRightOf="@id/textView15"
        android:text="Einheit:                        " />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/best_tigen" />

    <Spinner
        android:id="@+id/ingredients_spinner"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView14"
        android:layout_marginRight="15dp" />

    <EditText
        android:id="@+id/amount_plainText"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView14"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/ingredients_spinner"
        android:ems="10"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/unit_spinner"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView14"
        android:layout_toRightOf="@id/amount_plainText" />
</RelativeLayout>